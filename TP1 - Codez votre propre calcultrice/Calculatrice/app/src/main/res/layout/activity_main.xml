<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textview_result"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textview_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <LinearLayout
        android:id="@+id/LinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:background="#939393" android:orientation="vertical" android:paddingVertical="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#040404"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp"
                android:id="@+id/button_left"
                android:text="(">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:text=")"
                android:id="@+id/button_right"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_div"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="7"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="8"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="9"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mul"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="4"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="5"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="6"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="1"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="2"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="3"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAC"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="@color/black"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="0"
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonVerg"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#CECECF"
                android:text="."
                android:textColor="#240059"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eq"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="14dp"
                android:backgroundTint="#2A056E"
                android:text="="
                android:textColor="@color/white"
                android:textSize="26dp"
                app:cornerRadius="15dp">

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>